<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00B607"
        android:gravity="center"
        android:text="LOGIN"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:autoSizeTextType="uniform" />

    <EditText
        android:id="@+id/TextoEditarEmail"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Digite o email"
        android:inputType="textEmailAddress"
        android:translationX="30dp"
        android:translationY="80dp" />

    <EditText
        android:id="@+id/TextoDigitarSenha"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Digite a senha"
        android:inputType="numberPassword"
        android:translationX="30dp"
        android:translationY="170dp" />

    <Button
        android:id="@+id/BtnEsqueceuSenha"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:onClick="OnClickBtnEsqueceuSenha"
        android:shadowColor="#FFFFFF"
        android:text="Esqueceu a senha?"
        android:textColor="#1B3EFF"
        android:translationX="150dp"
        android:translationY="190dp"
        app:iconTint="#FFFFFF" />

    <Button
        android:id="@+id/btnInicio"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#00B607"
        android:onClick="OnClickBtnEsqueceuSenha"
        android:scaleX="1"
        android:shadowColor="#00B607"
        android:text="Perdidos"
        android:textColor="#FFFFFF"
        android:translationY="475dp"
        app:iconTint="#FFFFFF"
        app:strokeColor="#00B607" />

</LinearLayout>